name:                asteroids
version:             0.1.0.0
synopsis:            Asteroids... in Haskell!!
-- description:         
homepage:            github.com/mdietz94/asteroids
license:             GPL-3
license-file:        LICENSE
author:              Max Dietz
maintainer:          mdietz@wesleyan.edu
-- copyright:           
category:            Game
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable asteroids
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8
                     , sdl2 >=2.0.0
                     , lens
                     , mtl
                     , linear
                     , text
                     , random
                     , rand-vars
  hs-source-dirs:      src
  default-language:    Haskell2010

Test-Suite test-asteroids
  type:                exitcode-stdio-1.0
  main-is:             Main.hs
  build-depends:       base >=4.7 && <4.8
                     , QuickCheck
  hs-source-dirs:      testsuite
  default-language:    Haskell2010
